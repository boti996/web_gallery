<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0 shrink-to-fit=no" />
        <meta name="description" content="A web gallery for browsing and sharing photo albums and videos.">
        <meta name="author" content="Botond Dobai">
        <link rel="icon" href="~/favicon.ico">

        <title>@ViewData["Title"] - Web Gallery</title>

        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        @* TODO *@
        <link rel="stylesheet" href="~/css/site.css" />

        @RenderSection("Header", required: false)
    </head>

    <body>

        <div class="cover-container d-flex h-100 p-3 w-100 mx-auto flex-column">

            <header class="masthead mb-auto">
                <div class="inner collapse dont-collapse-md" id="navbarHeader">
                    <partial name="_Header" />
                </div>
                <button class="navbar-toggler navbar-dark d-md-none d-block" id="navbarToggle" type="button" data-toggle="collapse" data-target="#navbarHeader" aria-controls="navbarHeader" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </header>

            <main role="main" class="inner cover container-fluid flex-fill p-5">
                @RenderBody()
            </main>

            <footer class="mastfoot mt-auto">
                <div class="inner">
                    <p>
                        &copy; 2020 - Web Gallery - <a asp-area="" asp-page="/About">About us</a>
                    </p>
                </div>
            </footer>

        </div>

        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>

        @RenderSection("Scripts", required: false)

    </body>

</html>
